extends ../../layouts/default.pug

block main
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../../partials/topbar.pug
      .container.text-center
        h2.m-3 Phân quyền
      - if (role.permissions.includes("role-role-edit")&&role.permissions.includes("role-role-add")&&role.permissions.includes("role-role-delete"))
        .row.my-3 
          .col-9 
          .col-3 
              button(class="btn btn-primary" btn-update-roles) Cập nhật
        .container 
          table(class="table text-center" data-role=roles)
              thead 
                  tr 
                      th 
                          b Vai trò
                      each role in roles  
                          th(id-role=role._id) #{role.title}
              tbody 
                  tr 
                      td 
                          b Quản lý người dùng 
                  tr(row) 
                    td Thêm  
                    each role in roles 
                      td 
                        input(type="checkbox"  act="role-user-add")
                  tr(row) 
                    td Xoá 
                    each role in roles 
                      td 
                        input(type="checkbox"  act="role-user-delete")
                  tr(row) 
                    td Sửa 
                    each role in roles 
                      td 
                        input(type="checkbox"  act="role-user-edit")
