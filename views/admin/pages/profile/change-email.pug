extends ../../layouts/default.pug

block main
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../../partials/topbar.pug
      .container.text-center
        h2.m-3 Đổi email
      .container 
        form(class="form-group" method="POST" action=`/admin/profile/change-email?_method=PATCH` )
          div(class="mb-3" ) 
            label(class="form-label d-block") Email mới
                span.text-danger *
            input(type="email" require class="form-control d-block"  name="email")
          div(class="mb-3" ) 
            label(class="form-label d-block") OTP
                span.text-danger *
            .input-group
                input(type="text" require class="form-control d-block" name="otp" )
                .input-group-append
                    span(send-otp class="btn btn-primary") Nhận OTP
          div(class="mb-3 " message-otp) 
            label(class="form-label d-block text-danger")  
          button.btn.btn-primary(type='submit') Submit      
      // Footer
      footer.sticky-footer.bg-white
        .container.my-auto
          .copyright.text-center.my-auto
            span | Copyright © Your Website 2020

  // Scroll to Top Button
  a#scrollToTopButton.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up


