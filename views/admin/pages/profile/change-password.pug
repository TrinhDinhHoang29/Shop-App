extends ../../layouts/default.pug

block main
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../../partials/topbar.pug
      .container.text-center
        h2.m-3 Profile
      .container 
        form(class="form-group" method="POST" action=`/admin/profile/change-password?_method=PATCH` )
          div(class="mb-3" ) 
            label(class="form-label d-block") Mật khẩu cũ
                span.text-danger *
            input(type="password" require class="form-control d-block"  name="password")
          div(class="mb-3" ) 
            label(class="form-label d-block") Mật khẩu mới
                span.text-danger *
            input(type="password" require class="form-control d-block"  name="passwordNew" )
          div(class="mb-3" ) 
            label(class="form-label d-block") Nhập lại mật khẩu mới
                span.text-danger *
            input(type="password" require class="form-control d-block"  name="rePasswordNew" )
                       
          button.btn.btn-primary(type='submit') Submit
      
      // Footer
      footer.sticky-footer.bg-white
        .container.my-auto
          .copyright.text-center.my-auto
            span | Copyright © Your Website 2020

  // Scroll to Top Button
  a#scrollToTopButton.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up


