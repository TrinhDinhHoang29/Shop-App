extends ../../layouts/default.pug
block main
    .main-content2
        .title-first.my-3 
            h5 Profile
        .container 
          form(class="form-group" method="POST" action=`/profile/change-email?_method=PATCH` )
            div(class="mb-3" ) 
              label(class="form-label d-block") Email mới
                  span.text-danger *
              input(type="email" require class="form-control d-block"  name="email")
            div(class="mb-3" ) 
              label(class="form-label d-block") OTP
                  span.text-danger *
              .input-group
                  input(type="text" require class="form-control d-block" name="otp" )
                  .input-group-append
                      span(send-otp-client class="btn btn-primary") Nhận OTP
            div(class="mb-3 " message-otp) 
              label(class="form-label d-block text-danger")  
            button.btn.btn-primary(type='submit') Submit      
        
            
                   
                         

